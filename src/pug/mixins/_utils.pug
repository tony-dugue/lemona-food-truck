//- Déclaration logo
mixin logo
        a.logo(href="./client.html")
            img.logo__icon(src="./images/logo.png", alt="logo")
            .logo__text 
                .logo__text--big LEMONA
                .logo__text--small Food&nbsp;Truck

//- Déclaration des boutons

mixin btn-primary(link, content)
    if link
        a(href=link).btn.btn-primary.td-btn.td-btn__primary #{content}
    else
        button.btn.btn-primary.td-btn.td-btn__primary(type='submit') #{content}

mixin btn-secondary(link, content)
    if link
        a(href=link).btn.btn-secondary.td-btn.td-btn__secondary #{content}
    else
        button.btn.btn-secondary.td-btn.td-btn__secondary(type='submit') #{content}