//- Déclaration d'un menu dans le tableau edition du dashboard
mixin tableMenu(key, img, title, price, date_create, date_modif, visible)
    tr
        th #{key}
        th.menuEdition__body-title #{title}
        th
            img.menuEdition__body-img(src=img,alt=title)
        th.menuEdition__body-price #{price}
        th.menuEdition__body-desc #{date_create}
        th.menuEdition__body-desc #{date_modif}
        th.menuEdition__body-visible #{visible}
        th
            .icon-control
                a.mr-2(href="./edit.html")
