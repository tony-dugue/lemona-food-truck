//- Declaration Dashboard Header
mixin dashboardHeader
    header.dashboard__header.navbar.navbar-dark.sticky-top.flex-md-nowrap.p-0.py-2.align-items-center
        .dashboard__header-logo
            +logo
        .dashboard__header-search.d-flex.align-items-center
            input.form-control.dashboard__header-searchInput(type='text', placeholder='Rechercher')
            a(href='#')
                svg.dashboard__header-searchIcon(width='1em' height='1em' viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg')
                    path(d='M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z')
                    path(d='M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z')

        .dashboard__header-link
            a.nav-link(href='/') Déconnexion

//- Declaration Dashboard Sidebar

mixin dashboardSidebar
    sidebar
        nav

            .border-bottom.mb-3
                .sidebar__avatar
                    img.sidebar__avatar-logo(src="./images/avatar.png" alt="avatar")
                    h5.sidebar__avatar-name Tony Dugué

            ul.nav.flex-column
                li.nav-item: a.nav-link.sidebar__item.active(href='./client.html')
                    | Voir le site
                li.nav-item: a.nav-link.sidebar__item.active(href='./dashboard.html') 
                    | Voir le Dashboard
            
            h6.px-3.mt-4.mb-1.sidebar__title Edition

            ul.nav.flex-column.mb-2
                li.nav-item: a.nav-link.sidebar__item(href='./construction.html') 
                    | Ajouter un profil
                li.nav-item: a.nav-link.sidebar__item(href='./add.html')
                    | Ajouter un menu
                li.nav-item: a.nav-link.sidebar__item(href='./add.html')
                    | Ajouter une boisson

            h6.px-3.mt-4.mb-1.sidebar__title Communication

            ul.nav.flex-column.mb-2
                li.nav-item: a.nav-link.sidebar__item(href='./construction.html')
                    | Gestion des médias
                li.nav-item: a.nav-link.sidebar__item(href='./construction.html')
                    | Newsletter
                li.nav-item: a.nav-link.sidebar__item(href='./construction.html')
                    | Calendrier lieux

//- Declaration Dashboard Footer
mixin dashboardFooter

    .row
        .footer.d-flex.justify-content-between.align-items-center.w-100.mt-5
            .col
                +logo
            .col
                +social

