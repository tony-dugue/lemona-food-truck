include mixins/_utils.pug
include mixins/_utils-dashboard.pug

doctype html
html(lang='fr')
    +head('Ajout d\'un élément', '', 'dashboard.css')

    body
        .dashboard
            +dashboardHeader
            .container-fluid
                .row
                    sidebar
                        .col-md-3.col-lg-2.d-md-block.collapse.pt-3.sidebar
                            +dashboardSidebar
                    main
                        .col-md-9.ml-sm-auto.col-lg-10

                            //- ================= MAIN CONTENT ============================

                            .dashboard__content
                            
                                h2.heading__dash.border-bottom Ajout d'un nouvel élément

                                .container
                                    .row.mx-auto.justify-content-start

                                        form.dashForm.mb-5(action="./dashboard.html" method="GET")

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-title') Type d'élément :
                                                
                                                .form-check.form-check-inline
                                                    input#menu.form-check-input(type='radio' name='menuType' value='menu' checked)
                                                    label.form-check-label(for='menu') Menu

                                                .form-check.form-check-inline
                                                    input#boisson.form-check-input(type='radio' name='menuType' value='boisson')
                                                    label.form-check-label(for='boisson') Boisson / Snacking

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-title') Nom du menu
                                                input#edit-title.form-control.dashForm__input(type='text' value='' placeholder="Nom du menu" name="title")

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-image') Image d'illustration
                                                img.dashForm__image(src="./images/image-placeholder.jpg" alt="")
                                                input#edit-image.form-control.dashForm__input-img(type='file' name="image")

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-ingredient') Liste des ingrédients
                                                input#edit-ingredient.form-control.dashForm__input(type='text' value='' placeholder="Liste des ingrédients principaux" name="ingredient")

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-price') Prix
                                                .input-group.mb-3.dashForm__input-price
                                                    .input-group-prepend
                                                        span.input-group-text €
                                                    input#edit-price.form-control.dashForm__input(type='number' value='9.99' min='0.49' step="0.5" name="price")

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-desc') Description
                                                textarea#edit-desc.form-control.dashForm__input(rows='3', placeholder="Description", name="description")

                                            .form-group.dashForm__group
                                                label.dashForm__label(for='edit-info') Informations complémentaires
                                                textarea#edit-info.form-control.dashForm__input(rows='3', placeholder="Toutes informations importantes", name="informations")

                                            .form-check.dashForm__check.mb-3
                                                input#edit-check.form-check-input.dashForm__check-input(type='checkbox', name="online")
                                                label.form-check-label.dashForm__label(for='edit-check') Visible en ligne

                                            +btn-secondary('', 'Enregistrer les modifications')
                                            +btn-primary('./article.html', 'Aperçu')

                                +dashboardFooter